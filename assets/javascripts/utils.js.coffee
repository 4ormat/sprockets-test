  @mail_regexp = /^mailto:((([a-z]|\d|[!#\$%&'\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+(\.([a-z]|\d|[!#\$%&'\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+)*)|((\x22)((((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(([\x01-\x08\x0b\x0c\x0e-\x1f\x7f]|\x21|[\x23-\x5b]|[\x5d-\x7e]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(\\([\x01-\x09\x0b\x0c\x0d-\x7f]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))))*(((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(\x22)))@((([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.)+(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.?$/i

  @clamp = (num, min, max) ->
    return min if num < min
    return max if num > max
    num

  @isSafari5: ->
    !!navigator.userAgent.match(" Safari/") and not navigator.userAgent.match(" Chrom") and !!navigator.userAgent.match(" Version/5.")

  @isHref: (value) ->
    @web_regexp.test(value) or @mail_regexp.test(value)

  @isVideoUrl: (value) ->
    @youtube1_regexp.test(value) or @youtube2_regexp.test(value) or @vimeo_regexp.test(value)

  @truncate: (s, limit = null) ->
    l = limit || 130
    trimmed =  s.slice(0, l)
    if s.length >= l
      trimmed = trimmed + "..."
    trimmed

  @stripTrailingSlash: (string) ->
    if string.substr(-1) is "/"
      string.substr(0, string.length - 1)
    else
      string

  @pathname: ->
    @stripTrailingSlash location.pathname

  @isBlank: (string) ->
    not string? or string.replace(/\s/g, "") is ""

  @isMobile: ->
    /(Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini)/i.test(navigator.userAgent)

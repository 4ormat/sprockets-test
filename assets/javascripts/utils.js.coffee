  @youtube1_regexp = /^(http(s)?:\/\/)?(www\.)?youtube.com\/watch\?.*v=([\w-]+)[\&]?/
  @youtube2_regexp = /^(http(s)?:\/\/)?(www\.)?youtu.be\/([\w-]+)[\&]?/
  @vimeo_regexp = /^(http(s)?:\/\/)?(www\.)?vimeo\.com(?:\/\w+)*\/(\d+)/
